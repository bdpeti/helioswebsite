<div class="container mx-auto px-4 py-24 min-h-screen">
  <h1 class="text-6xl font-black font-syne uppercase mb-12 text-outline">KOSÁR</h1>

  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post" novalidate>
      <div class="border-t border-white/20">
        {% for item in cart.items %}
          <div class="grid grid-cols-12 gap-4 py-8 border-b border-white/20 items-center">
            <div class="col-span-3 md:col-span-2">
              {% if item.image %}
                {{ item.image | image_url: width: 300 | image_tag: class: 'w-full aspect-square object-cover border border-white/10' }}
              {% endif %}
            </div>
            <div class="col-span-9 md:col-span-6">
              <h3 class="font-syne font-bold text-xl uppercase mb-1">
                <a href="{{ item.url }}" class="no-underline text-white hover:text-[#FF9E00]">{{ item.product.title }}</a>
              </h3>
              <p class="font-mono text-sm text-gray-400">{{ item.variant.title }}</p>
              <p class="font-mono text-sm text-[#FF9E00] mt-2">{{ item.final_price | money }}</p>
            </div>
            <div class="col-span-6 md:col-span-2 flex items-center border border-white/20">
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" class="w-full bg-transparent text-center font-mono py-2 outline-none text-white">
            </div>
            <div class="col-span-6 md:col-span-2 text-right">
              <p class="font-mono font-bold">{{ item.final_line_price | money }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="mt-12 flex flex-col items-end">
        <div class="flex justify-between w-full md:w-1/3 mb-4 font-mono text-xl">
            <span>ÖSSZESEN:</span>
            <span class="text-[#FF9E00] font-bold">{{ cart.total_price | money }}</span>
        </div>
        <p class="font-mono text-xs text-gray-500 mb-8">ADÓK ÉS SZÁLLÍTÁS A PÉNZTÁRNÁL SZÁMOLVA.</p>
        
        <div class="flex gap-4">
            <button type="submit" name="update" class="border border-white text-white px-8 py-4 font-bold uppercase tracking-wider hover:bg-white hover:text-black transition-all cursor-none-target">
                FRISSÍTÉS
            </button>
            <button type="submit" name="checkout" class="bg-[#FF9E00] text-black px-8 py-4 font-bold uppercase tracking-wider hover:bg-[#CCFF00] transition-colors shadow-[4px_4px_0px_0px_#ffffff] cursor-none-target">
                FIZETÉS
            </button>
        </div>
      </div>
    </form>
  {% else %}
    <div class="text-center py-20 border border-white/10">
        <p class="font-mono text-xl mb-8">A KOSARAD ÜRES.</p>
        <a href="{{ routes.all_products_collection_url }}" class="bg-[#FF9E00] text-black px-8 py-4 font-bold uppercase tracking-wider hover:bg-[#CCFF00] transition-colors cursor-none-target">
            VÁSÁRLÁS KEZDÉSE
        </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
