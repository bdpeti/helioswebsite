<div class="min-h-screen bg-[#050406] text-[#f0f0f0] flex flex-col items-center justify-center p-4 relative overflow-hidden">
  <!-- Background Noise -->
  <div class="absolute inset-0 opacity-10 pointer-events-none" style="background-image: url('{{ 'noise.png' | asset_url }}');"></div>

  <div class="max-w-lg w-full text-center z-10">
    <h1 class="text-6xl md:text-8xl font-black font-syne uppercase text-outline mb-8 glitch-text" data-text="HELIOS">HELIOS</h1>
    
    <h2 class="font-mono text-[#FF9E00] text-xl mb-8 uppercase">{{ 'general.password_page.opening_soon' | t }}</h2>

    {% form 'storefront_password' %}
      {% if form.errors %}
        <div class="text-red-500 font-mono text-xs mb-4">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="flex flex-col gap-4">
        <label for="password" class="sr-only">{{ 'general.password_page.login_form_password_label' | t }}</label>
        <div class="flex">
            <input 
            type="password" 
            name="password" 
            id="password" 
            placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
            class="w-full bg-black border border-white/20 text-white p-4 font-mono outline-none focus:border-[#FF9E00]"
            >
            <button type="submit" class="bg-[#FF9E00] text-black px-6 font-bold uppercase hover:bg-white transition-colors">
            ->
            </button>
        </div>
      </div>
    {% endform %}

    <div class="mt-12 pt-12 border-t border-white/10">
        <p class="font-mono text-xs text-gray-500 mb-4">{{ 'general.password_page.admin_link_html' | t }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Password Page",
  "settings": []
}
{% endschema %}
