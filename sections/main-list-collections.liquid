<div class="min-h-screen bg-[#050406] text-[#f0f0f0] pb-20 pt-32">
  <div class="container mx-auto px-6 md:px-12">
    <h1 class="text-6xl font-black font-syne uppercase mb-12 text-outline glitch-text" data-text="{{ 'general.collections.title' | t }}">{{ 'general.collections.title' | t }}</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for collection in collections %}
        <a href="{{ collection.url }}" class="group block border border-white/10 hover:border-[#FF9E00] transition-colors bg-[#111] overflow-hidden">
          <div class="aspect-[16/9] overflow-hidden">
            {% if collection.image %}
              {{ collection.image | image_url: width: 800 | image_tag: class: 'w-full h-full object-cover transition-transform duration-700 group-hover:scale-105 grayscale group-hover:grayscale-0' }}
            {% else %}
               <div class="w-full h-full bg-[#222] flex items-center justify-center text-gray-700 font-mono">NO IMAGE</div>
            {% endif %}
          </div>
          <div class="p-6">
            <h2 class="font-syne font-bold text-2xl uppercase mb-2 group-hover:text-[#FF9E00] transition-colors">{{ collection.title }}</h2>
            <p class="font-mono text-xs text-gray-500">{{ 'collection.product_count' | t: count: collection.all_products_count }}</p>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collections List",
  "settings": []
}
{% endschema %}
