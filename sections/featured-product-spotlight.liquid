<section class="py-24 bg-[#FF9E00] text-black relative overflow-hidden">
    <!-- Marquee Background -->
    <div class="absolute top-1/2 left-0 w-full -translate-y-1/2 opacity-10 pointer-events-none select-none">
        <div class="whitespace-nowrap text-[20vw] font-black font-syne leading-none">
            DROP OF THE MONTH DROP OF THE MONTH
        </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Image -->
            <div class="relative group cursor-none-target">
                <div class="aspect-square border-4 border-black bg-white relative overflow-hidden">
                    {% if section.settings.product != blank and section.settings.product.featured_image != blank %}
                        {{ section.settings.product.featured_image | image_url: width: 1000 | image_tag: class: 'w-full h-full object-cover group-hover:scale-110 transition-transform duration-700' }}
                    {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                    {% endif %}
                </div>
                <!-- Sticker -->
                <div class="absolute -top-6 -right-6 w-32 h-32 bg-black text-[#CCFF00] rounded-full flex items-center justify-center animate-spin-slow">
                    <span class="font-mono font-bold text-sm text-center">HÓNAP<br>TERMÉKE</span>
                </div>
            </div>

            <!-- Content -->
            <div class="text-left">
                <div class="inline-block bg-black text-white px-2 py-1 font-mono text-xs mb-4">
                    LIMITED EDITION // 1 OF 100
                </div>
                <h2 class="text-6xl md:text-8xl font-black font-syne uppercase leading-[0.9] mb-6">
                    {{ section.settings.product.title | default: "HELIOS V2 PRO" }}
                </h2>
                <p class="font-mono font-bold text-xl mb-8 border-l-4 border-black pl-4">
                    {{ section.settings.description | default: "A legújabb fejlesztésünk. Tökéletes súlyelosztás, tapadós felület, brutális tartósság." }}
                </p>
                
                <div class="flex gap-4">
                    <a href="{{ section.settings.product.url | default: '#' }}" class="bg-black text-[#FF9E00] px-8 py-4 font-bold uppercase tracking-wider hover:bg-white hover:text-black transition-all shadow-[8px_8px_0px_0px_#ffffff] cursor-none-target inline-block no-underline">
                        MEGVESZEM - {{ section.settings.product.price | money | default: "15 990 FT" }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Product Spotlight",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Custom Description"
    }
  ],
  "presets": [
    {
      "name": "Product Spotlight"
    }
  ]
}
{% endschema %}
