<footer class="mt-20 border-t border-white/20 bg-[#0a0a0a] relative overflow-hidden pb-safe">
    <div
        class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-[#FF9E00] to-transparent opacity-5 pointer-events-none">
    </div>

    <div class="container mx-auto px-4 py-20">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
            <div>
                <h3 class="text-3xl font-syne font-bold mb-6 uppercase">NE MARADJ LE <br>A <span
                        class="text-[#FF9E00]">KÖVETKEZŐ DROP-RÓL</span></h3>
                {% form 'customer' %}
                    <div class="flex border-b border-white hover:border-[#FF9E00] transition-colors py-2">
                        <input type="email" name="contact[email]" placeholder="EMAIL CÍM..."
                            class="bg-transparent w-full outline-none font-mono text-sm placeholder-gray-600 uppercase cursor-none-target text-white">
                        <button type="submit"
                            class="text-[#FF9E00] font-bold uppercase text-sm cursor-none-target hover:text-white">KÜLDÉS</button>
                    </div>
                {% endform %}
                <p class="mt-4 text-xs text-gray-500 font-mono">NINCS SPAM. CSAK TŰZ. IRATKOZZ LE BÁRMIKOR.</p>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-8 font-mono text-sm">
                <ul>
                    <li class="mb-4 text-[#FF9E00] font-bold uppercase">BOLT</li>
                    {% for link in linklists.footer.links %}
                        <li class="mb-2"><a href="{{ link.url }}"
                                class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <ul>
                    <li class="mb-4 text-[#FF9E00] font-bold uppercase">KAPCSOLAT</li>
                    <li class="mb-2"><a href="#"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">Instagram</a>
                    </li>
                    <li class="mb-2"><a href="#"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">TikTok</a>
                    </li>
                    <li class="mb-2"><a href="#"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">Discord</a>
                    </li>
                </ul>
                <ul>
                    <li class="mb-4 text-[#FF9E00] font-bold uppercase">JOGI</li>
                    <li class="mb-2"><a href="/policies/privacy-policy"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">Adatvédelem</a>
                    </li>
                    <li class="mb-2"><a href="/policies/refund-policy"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">Visszatérítés</a>
                    </li>
                    <li class="mb-2"><a href="/policies/terms-of-service"
                            class="hover:text-white text-gray-400 cursor-none-target hover:pl-2 transition-all">ÁSZF</a>
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="mt-20 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center text-xs text-gray-600 font-mono uppercase">
            <div>© {{ 'now' | date: "%Y" }} HELIOS KENDAMA. MINDEN JOG FENNTARTVA.</div>
            <div class="mt-4 md:mt-0">GEN Z-NEK TERVEZVE // CODE: ORANGE</div>
        </div>
    </div>

    <!-- Big Footer Text -->
    <div class="w-full text-center overflow-hidden leading-none select-none pointer-events-none opacity-10">
        <h1 class="text-[15vw] font-syne font-black text-white translate-y-10">HELIOS</h1>
    </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}
