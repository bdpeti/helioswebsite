<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&family=Syne:wght@400;700;800&display=swap" rel="stylesheet">

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    <!-- Vite Built Assets -->
    {{ 'style.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'main.js' | asset_url }}" defer="defer" type="module"></script>

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <style>
      :root {
        --color-primary: {{ settings.color_primary }};
        --color-bg: {{ settings.color_bg }};
        --color-accent: {{ settings.color_accent }};
        --color-text: {{ settings.color_text }};
        --page-width: {{ settings.page_width }}px;
      }
    </style>

    {% render 'meta-tags' %}
    {% render 'structured-data' %}
  </head>

  <body class="antialiased selection:bg-[#FF9E00] selection:text-black">
    <a class="skip-to-content-link sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:bg-[#FF9E00] focus:text-black focus:p-4 focus:font-bold focus:uppercase" href="#MainContent">
      {{ "accessibility.skip_to_text" | t }}
    </a>

    <!-- Custom Cursor Elements -->
    <div class="cursor-dot"></div>
    <div class="cursor-outline"></div>

    <!-- Noise Texture -->
    <div class="noise"></div>

    <!-- Preloader -->
    <div id="preloader">
        <h1 class="text-6xl md:text-9xl font-bold text-[#FF9E00] font-syne tracking-tighter">{{ 'general.preloader.loading' | t }}</h1>
        <div class="w-64 h-1 bg-gray-800 mt-4 overflow-hidden">
            <div id="loader-bar" class="h-full bg-[#FF9E00] w-0 transition-all duration-300"></div>
        </div>
        <p class="mt-2 text-xs text-[#CCFF00]">{{ 'general.preloader.system_start' | t }}</p>
    </div>

    {% section 'header' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
  </body>
</html>
