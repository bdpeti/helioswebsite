            {
                "type": "color",
                "id": "color_bg",
                "label": "Background Color",
                "default": "#050406"
            },
            {
                "type": "color",
                "id": "color_accent",
                "label": "Accent Color",
                "default": "#CCFF00"
            },
            {
                "type": "color",
                "id": "color_text",
                "label": "Text Color",
                "default": "#f0f0f0"
