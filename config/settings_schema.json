    {
        "name": "Typography",
        "settings": [
            {
                "type": "header",
                "content": "Headings"
            },
            {
                "type": "font_picker",
                "id": "type_header_font",
                "label": "Heading Font",
                "default": "sans-serif"
            },
            {
                "type": "header",
                "content": "Body"
            },
            {
                "type": "font_picker",
                "id": "type_body_font",
                "label": "Body Font",
                "default": "mono"
            }
        ]
    },
    {
        "name": "Social Media",
        "settings": [
            {
                "type": "text",
                "id": "social_instagram_link",
                "label": "Instagram",
                "info": "https://instagram.com/yourhandle"
            },
            {
                "type": "text",
                "id": "social_tiktok_link",
                "label": "TikTok",
                "info": "https://tiktok.com/@yourhandle"
            },
            {
                "type": "text",
                "id": "social_discord_link",
                "label": "Discord",
                "info": "https://discord.gg/yourserver"
            }
        ]
    },
    {
        "name": "Layout",
        "settings": [
            {
                "type": "range",
                "id": "page_width",
                "min": 1000,
                "max": 1600,
                "step": 100,
                "default": 1200,
                "unit": "px",
                "label": "Page width"
            }
        ]
    },
    {
        "name": "Animations",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_glitch",
