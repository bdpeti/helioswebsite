                "default": true
            },
            {
                "type": "range",
                "id": "glitch_intensity",
                "min": 1,
                "max": 10,
                "step": 1,
                "default": 5,
                "label": "Glitch Intensity"
            }
        ]
    },
    {
        "name": "Favicon",
        "settings": [
            {
                "type": "image_picker",
                "id": "favicon",
                "label": "Favicon image"
